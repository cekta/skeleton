{
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "cekta/framework": "@dev",
    "cekta/migrator": "dev-master",
    "cekta/di": "dev-master",
    "ext-pdo": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "App\\Runtime\\": "runtime/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "CEKTA_MODE=build php app.php"
    ],
    "before-build-check": [
      "echo check code style, or static analyze, or run unit tests, maybe run this target pre merge, runed on build prod"
    ]
  },
  "config": {
    "optimize-autoloader": true
  },
  "repositories": [
    {
      "type": "path",
      "url": "./local/cekta/framework"
    }
  ]
}
