{
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "cekta/framework": "@dev",
    "cekta/migrator": "dev-master",
    "ext-pdo": "*",
    "ext-pdo_sqlite": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "App\\Runtime\\": "runtime/"
    }
  },
  "scripts": {
    "build": [
      "@putenv CEKTA_MODE=build",
      "@composer dumpautoload",
      "@php app.php",
      "echo Generated optimized Container and discover files"
    ],
    "before-image": [
      "@composer build",
      "echo check code style, or static analyze, or run unit tests, maybe run this target pre merge, runed on build prod"
    ]
  },
  "config": {
    "optimize-autoloader": true
  }
}
