{
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "cekta/framework": "@dev"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^4.0",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "App\\Runtime\\": "runtime/"
    }
  },
  "scripts": {
    "build": [
      "@putenv CEKTA_MODE=build",
      "@composer dumpautoload",
      "@php app.php",
      "echo Generated optimized Container and discover files"
    ],
    "test": [
      "@php -i",
      "@build",
      "@phpcs",
      "@phpstan"
    ],
    "phpcs": "./vendor/bin/phpcs",
    "phpstan": "./vendor/bin/phpstan analyse --memory-limit=-1"
  },
  "config": {
    "optimize-autoloader": true
  }
}
